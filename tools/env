#!/usr/bin/env bash

set -e

readonly command=$1
readonly code_path=".."
readonly docker_path="$code_path/docker"

# Make sure we have googleapis.
if [[ -d $docker_path ]]
then
    (cd $docker_path && git pull --rebase)
else
    (cd $code_path && git clone git@github.com:alexfalkowski/docker.git)
fi

# Run the command.
(cd $docker_path && make "$command")
